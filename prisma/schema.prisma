generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
}

model customers {
  id        String     @id @default(uuid())
  name      String
  email     String
  image_url String
  invoices  invoices[]
}

model invoices {
  id         String     @id @default(uuid())
  customer   customers? @relation(fields: [customerId], references: [id])
  customerId String?
  amount     Int
  status     String
  date       DateTime
}

model revenue {
  id Int @id @default(autoincrement())
  month String
  revenue Int
}